extends layout

block content
  h1= title
  p Welcome to the homepage.

  if session.user
    h3 You are currently logged in
    p Welcome, #{session.user.fname}.
    p
      a(href="/profile") Your Profile
      |  - 
      a(href="/logout") Log out
  else
    h3 You are #[u not] logged in
    a(href="/login") Log in now
